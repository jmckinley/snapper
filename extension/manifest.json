{
  "manifest_version": 3,
  "name": "Snapper AI Firewall",
  "version": "0.2.0",
  "description": "Enforce security policy on AI chat interactions â€” 70+ AI services with tool detection, PII scanning, and shadow AI tracking.",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "clipboardRead",
    "alarms"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://copilot.microsoft.com/*",
    "*://grok.com/*",
    "*://chat.deepseek.com/*",
    "*://perplexity.ai/*",
    "*://www.perplexity.ai/*",
    "*://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/chatgpt.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://claude.ai/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/claude.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/gemini.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://copilot.microsoft.com/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/copilot.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://grok.com/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/grok.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://chat.deepseek.com/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/deepseek.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://perplexity.ai/*", "*://www.perplexity.ai/*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/perplexity.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://github.com/copilot*"],
      "js": ["content/pii-scanner.js", "content/shared.js", "content/github-copilot.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://chat.mistral.ai/*",
        "*://poe.com/*",
        "*://meta.ai/*", "*://www.meta.ai/*",
        "*://huggingface.co/chat*",
        "*://cursor.com/*", "*://www.cursor.com/*",
        "*://replit.com/*",
        "*://v0.dev/*",
        "*://bolt.new/*",
        "*://lovable.dev/*",
        "*://app.jasper.ai/*",
        "*://app.copy.ai/*",
        "*://app.writesonic.com/*",
        "*://notion.so/*", "*://www.notion.so/*",
        "*://app.writer.com/*",
        "*://midjourney.com/*", "*://www.midjourney.com/*",
        "*://app.leonardo.ai/*",
        "*://ideogram.ai/*",
        "*://app.runwayml.com/*",
        "*://sora.com/*",
        "*://app.grammarly.com/*"
      ],
      "js": ["content/pii-scanner.js", "content/shared.js", "data/service-registry.js", "content/generic-ai.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "storage": {
    "managed_schema": {
      "type": "object",
      "properties": {
        "snapper_url": {
          "type": "string",
          "description": "Snapper server URL"
        },
        "snapper_api_key": {
          "type": "string",
          "description": "Snapper API key"
        },
        "agent_id": {
          "type": "string",
          "description": "Agent ID registered with Snapper"
        },
        "fail_mode": {
          "type": "string",
          "enum": ["closed", "open"],
          "description": "Behavior when Snapper is unreachable"
        },
        "pii_scanning": {
          "type": "boolean",
          "description": "Enable PII scanning on user input"
        },
        "pii_blocking_mode": {
          "type": "string",
          "enum": ["warn", "block"],
          "description": "PII action: warn (allow bypass) or block (no bypass)"
        },
        "clipboard_monitoring": {
          "type": "boolean",
          "description": "Enable clipboard/paste PII monitoring"
        },
        "shadow_ai_tracking": {
          "type": "boolean",
          "description": "Enable shadow AI visit tracking"
        },
        "blocked_services": {
          "type": "array",
          "description": "List of service source IDs to block entirely"
        }
      }
    }
  }
}
