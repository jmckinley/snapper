{
  "manifest_version": 3,
  "name": "Snapper AI Firewall",
  "version": "0.1.0",
  "description": "Enforce security policy on AI chat interactions â€” ChatGPT, Claude, Gemini, Copilot, and Grok.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://copilot.microsoft.com/*",
    "*://grok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content/pii-scanner.js", "content/chatgpt.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://claude.ai/*"],
      "js": ["content/pii-scanner.js", "content/claude.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content/pii-scanner.js", "content/gemini.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://copilot.microsoft.com/*"],
      "js": ["content/pii-scanner.js", "content/copilot.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://grok.com/*"],
      "js": ["content/pii-scanner.js", "content/grok.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "storage": {
    "managed_schema": {
      "type": "object",
      "properties": {
        "snapper_url": {
          "type": "string",
          "description": "Snapper server URL"
        },
        "snapper_api_key": {
          "type": "string",
          "description": "Snapper API key"
        },
        "agent_id": {
          "type": "string",
          "description": "Agent ID registered with Snapper"
        },
        "fail_mode": {
          "type": "string",
          "enum": ["closed", "open"],
          "description": "Behavior when Snapper is unreachable"
        },
        "pii_scanning": {
          "type": "boolean",
          "description": "Enable PII scanning on user input"
        },
        "pii_blocking_mode": {
          "type": "string",
          "enum": ["warn", "block"],
          "description": "PII action: warn (allow bypass) or block (no bypass)"
        }
      }
    }
  }
}
